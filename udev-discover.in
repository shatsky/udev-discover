    ###
    # Generic treeview/treestore stuff

    # Wrapper to restore treeview cursor on previously chosen element after the tree is changed
    # Element is identified by PATH_COL
    # If the path is supplied, cursor will be restored only if it was on element with this path
    # (can be used to re-run cursor_changed handler on an updated element if it was selected)
    @contextmanager
    def preserve_cursor(self, path=None):
        model, selected = self.devices_tv.get_selection().get_selected()
        if selected:
            row = model[selected]
            selected_path = row[PATH_COL]
            yield
            if (path == None or path == selected_path) and self.rows.has_key(selected_path):
                self.devices_tv.expand_to_path(self.rows[selected_path].get_path())
                self.devices_tv.set_cursor(self.rows[selected_path].get_path(), None, False)
        else: yield

    # Wrapper to remove tree element if its becomes meaningless
    # e. g., element representing a seat which has no attached devices
    @contextmanager
    def remove_if_obsolete(self, treeiter):
        yield
        if self.devices_treestore[treeiter][PATH_COL].startswith('seat://') and not self.devices_treestore.iter_has_child(treeiter):
            del(self.rows[self.devices_treestore[treeiter][PATH_COL]])
            self.devices_treestore.remove(treeiter)

    # Move tree element with its subtree to another parent
    def treestore_move(self, parent_treeiter, treeiter):
        treestore = self.devices_treestore
        rows = self.rows
        new_treeiter = treestore.append(parent_treeiter, list(treestore[treeiter]))
        rows[treestore[treeiter][PATH_COL]] = Gtk.TreeRowReference.new(treestore, treestore.get_path(new_treeiter))
        # Traverse treeiter subtree
        if treestore.iter_has_child(treeiter):
            current = treestore.iter_nth_child(treeiter, 0)
            stack = []
            while current is not None:
                # Process the current element
                parent_treeiter = self.devices_treestore.get_iter(rows[treestore[treestore.iter_parent(current)][PATH_COL]].get_path())
                rows[treestore[current][PATH_COL]] = Gtk.TreeRowReference.new(treestore, treestore.get_path(treestore.append(parent_treeiter, list(treestore[current]))))
                # If it has children
                if treestore.iter_has_child(current):
                    stack.append(current)
                    # Get first child
                    current = treestore.iter_nth_child(current, 0)
                # If it has next sibling
                elif treestore.iter_next(current):
                    current = treestore.iter_next(current)
                else:
                    exit = True
                    while len(stack) > 0:
                        current = stack.pop()
                        if treestore.iter_next(current):
                            current = treestore.iter_next(current)
                            exit = False
                            break
                    # If we reached the top and didn't meet any element which has next sibling
                    if exit: break
        # TODO: does this remove all subtree objects and free the memory?
        treestore.remove(treeiter)
        return new_treeiter

    ###
    # Seats

    # Get device seat name (or None, if device is not seat-attachable)
    def get_device_seat(self, device):
        if device.get_props().has_key('TAGS') and ':seat:' in device.get_props()['TAGS']:
            if device.get_props().has_key('ID_SEAT'):
                return device.get_props()['ID_SEAT']
            else:
                return 'seat0'
        else:
            return None

    # Add seat tree node
    def add_seat_tree(self, seat):
        # TODO: check if the seat in logind seat list; if not - mark it as non-working
        seat_treeiter = self.devices_treestore.append(self.seats_treeiter, ['seat://'+seat, theme.load_icon('computer', 24, 0), seat, None, False, None])
        self.rows['seat://'+seat] = Gtk.TreeRowReference.new(self.devices_treestore, self.devices_treestore.get_path(seat_treeiter))
        return seat_treeiter

    # Switch tree into multiseat mode
    def multiseat_tree_toggleaction_toggled_cb(self, action):
