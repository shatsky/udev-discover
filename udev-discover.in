        self.reload_action_activate_cb()

    # Logind seat add/remove signal handlers
    def seat_add(self, seat, seat_path):
        # TODO: check if the seat is in tree; if yes - mark it as working
        if seat not in self.seat_menu_items.keys(): self.add_seat_menu_item(seat)
        self.logger.info(_('Seat added: %s') % seat)

    def seat_remove(self, seat, seat_path):
        # TODO: check if the seat is in tree; if yes - mark it as non-working
        if seat in self.seat_menu_items.keys(): self.remove_seat_menu_item(seat)
        self.logger.info(_('Seat removed: %s') % seat)

    # Update chosen seat menu item (without triggering choose_seat)
    def update_chosen_seat(self, seat):
        # It can happen that device seat is not in seat list obtained from logind
        # (none of its devices has :master-of-seat: tag)
        # TODO: find the best way to handle this case
        #  - add missing seat to menu (current solution; the problem is that it'll stay until the program termination)
        #  - display only logind-valid seats, do not mark any of them as chosen one (how?)
        if not seat in self.seat_menu_items.keys():
            self.add_seat_menu_item(seat)
        self.seat_menu_items[seat].handler_block_by_func(self.choose_seat)
        self.seat_menu_items[seat].activate()
        self.seat_menu_items[seat].handler_unblock_by_func(self.choose_seat)

    # Add seat menu item
    def add_seat_menu_item(self, seat):
        seat_menu = self.builder.get_object('seat_menu')
        group = (self.seat_menu_items[self.seat_menu_items.keys()[-1]].get_group() if len(self.seat_menu_items) else [])
        menu_item = Gtk.RadioMenuItem.new_with_label(group, seat)
        # Insert after last seat item, assuming that they are located at the top of the menu
        seat_menu.insert(menu_item, len(self.seat_menu_items))
        menu_item.connect('activate', self.choose_seat, seat)
        self.seat_menu_items[seat] = menu_item
        menu_item.show()

    # Remove seat menu item
    def remove_seat_menu_item(self, seat):
        self.builder.get_object('seat_menu').remove(self.seat_menu_items[seat])
        del self.seat_menu_items[seat]

    # Update seat menu list
    def update_seat_menu(self):
        # Delete seat menu items
        for seat in self.seat_menu_items.keys():
            self.remove_self_menu_item(seat)
        # Fill menu with new items
        seats = [logind_seat[0] for logind_seat in self.logind.ListSeats()]
        for seat in seats:
            self.add_seat_menu_item(seat)

    # Attach device to seat (if changed) and update chosen seat menu item (if succeeded)
    def choose_seat(self, item, seat):
        # We are called for both newly-chosen and previously-chosen items, so we check get_active() to ignore previously-chosen one
        if item.get_active() and seat != self.current_device_seat:
            # We can fail to attach device, so we reset chosen seat menu item to a previously-chosen one
            self.update_chosen_seat(self.current_device_seat)
            # Logind will take care of authorizing user if needed
            self.logind.AttachDevice(seat, '/sys'+self.current_device_path, True)
            # If everything went OK, we can set current seat menu item as an active one
            #self.update_chosen_seat(seat)
            #self.current_device_seat = seat
            # But instead we will rely on device_changed event handler to trigger tree cursor reset which will do the rest

    # Create a new seat
    def newseat_action_activate_cb(self, entry):
        # Show simple dialog asking for seat name
        if self.newseat_dialog.run() == Gtk.ResponseType.ACCEPT:
            self.logind.AttachDevice(self.builder.get_object('newseat_name_entry').get_text(), '/sys'+self.current_device_path, True)
            # On success, seat list will be updated via NewSeat signal handler

    ###
    # Devices

    # Get parent tree node for device
    def get_device_parent_treeiter(self, device):
        # By default, we insert device into tree without parent (as a top-level element)
        parent_treeiter = None
        # Some nodes in /sys/devices are not devices,
        # e. g., for '/devices/virtual/net/lo' there are no '/devices/virtual/net', '/devices/virtual' parent devices
        # However, we want them in treeview for clearness; but for parentless devices only,
        # e. g. for '/devices/pci0000:00/0000:00:09.0/0000:05:07.0/sound/card1' we don't need an empty 'sound' intermediate tree node
        if device.parent == None:
            parent_path = device.path.rsplit('/', 1)[0]
            parent_path_split = parent_path.split('/')
            for i in range(3, len(parent_path_split)): # [0]/sys[1]/devices[2]/...[3:]
                parent_path = '/'.join(parent_path_split[0:i+1])
                if not self.rows.has_key(parent_path):
                    parent_treeiter = self.devices_treestore.append(parent_treeiter, [parent_path, theme.load_icon('dialog-question', 24, 0), parent_path.rsplit('/', 1)[1], None, False, None])
                    self.rows[parent_path] = Gtk.TreeRowReference.new(self.devices_treestore, self.devices_treestore.get_path(parent_treeiter))
                else: parent_treeiter = self.devices_treestore.get_iter(self.rows[parent_path].get_path())
        # If device has a parent device, we use it as a parent tree node
        # We still have to check if it's in treestore; it can be missing, if its subsystem isn't in chosen_subsystems list,
        #  and parent_tree option is disabled
        elif self.rows.has_key(device.parent.path):
            parent_treeiter = self.devices_treestore.get_iter(
                self.rows[device.parent.path].get_path())
        # If multiseat tree mode enabled,
        if self.options['multiseat_tree']:
            seat = self.get_device_seat(device)
            # If device is seat-attached
            if seat != None:
                # If its seat is in the treeview, we check if it is under the same seat subtree as its parent tree element
                #  to display it as a child of its parent (if true) or a direct child of its seat (if false)
                # We cannot just check parent's device seat, because parent can be a non-seat-attachable subdevice of a seat-attached device
                #  or not a device at all
                if self.rows.has_key('seat://'+seat):
                    seat_treeiter = self.devices_treestore.get_iter(self.rows['seat://'+seat].get_path())
                    # If device has no parent or its parent is not in current-device-seat subtree - add it as a child node of its seat
                    if parent_treeiter == None or not self.devices_treestore.is_ancestor(seat_treeiter, parent_treeiter):
                        parent_treeiter = seat_treeiter
                    # Otherwise, parent device node will be a parent_treeiter
                # If its seat is not in the treeview yet - create seat tree node and use it as a parent unconditionally
                else:
                    parent_treeiter = self.add_seat_tree(seat)
            # None-seat devices are always shown as children of their parent devices
        return parent_treeiter

    # Device add/remove/change event handlers
    def new_device(self, device_finder, device):
        row_ref = self.add_new_device(device)

        if self.options['expanded']:
            iter_path = row_ref.get_path()
            if self.is_filtered:
                iter_path = self.modelfilter.convert_child_path_to_path(row_ref.get_path())

            self.devices_tv.expand_to_path(iter_path)

        if self.options['follownew']:
            self.devices_tv.set_cursor(row_ref.get_path(), None, False)

        self.logger.info(_('Device added: %s') % device.nice_label)

    def removed_device(self, device_finder, device):
        if self.rows.has_key(device.path):
            ref_row = self.rows[device.path]
            treeiter = self.devices_treestore.get_iter(ref_row.get_path())

            with self.remove_if_obsolete(self.devices_treestore.iter_parent(treeiter)):
                self.devices_treestore.remove(treeiter)
                del(self.rows[device.path])

        # TODO: if removed device was selected - move the cursor to its previous sibling or parent device

        self.logger.info(_('Device removed: %s') % device.nice_label)

    def changed_device(self, device_finder, device, old_device):

        if self.rows.has_key(device.path):
            ref_row = self.rows[device.path]
            treeiter = self.devices_treestore.get_iter(ref_row.get_path())

            with self.preserve_cursor(self.devices_treestore[treeiter][PATH_COL]):
                # Parent tree element can change
                parent_treeiter = self.get_device_parent_treeiter(device)
                old_parent_treeiter = self.devices_treestore.iter_parent(treeiter)
                # TODO: looks like we can't compare treeiters, treestore methods always return new treeiter objects, even if nothing is changed
                # e. g., self.devices_treestore.iter_parent(treeiter) == self.devices_treestore.iter_parent(treeiter) will be False
                if self.devices_treestore[parent_treeiter][PATH_COL] != self.devices_treestore[old_parent_treeiter][PATH_COL]:
                    with self.remove_if_obsolete(old_parent_treeiter):
                        treeiter = self.treestore_move(parent_treeiter, treeiter)

                # Update data
                self.devices_treestore.set(treeiter, range(6), [device.path,
                    device_icon, device.nice_label, device.subsystem, False,
                    device.name])

            row_ref = self.rows[device.path]

            if self.options['expanded']:
                iter_path = row_ref.get_path()
                if self.is_filtered:
                    iter_path = self.modelfilter.convert_child_path_to_path(row_ref.get_path())

                self.devices_tv.expand_to_path(iter_path)

            if self.options['followchanged']:
                self.devices_tv.set_cursor(row_ref.get_path(), None, False)

        self.logger.info(_('Device changed: %s') % device.nice_label)

        # Log device updated info and properties
        for i in udevdiscover.device.find_differences(old_device, device):
            if i[0] == 'changed': self.logger.debug('%s %s, %s: %s -> %s' % i)
            else: self.logger.debug('%s %s, %s: %s' % i)

    def populate(self, devices):
        self.devices_treestore.clear()
        self.rows = {}

        # Add root element for seats
        if self.options['multiseat_tree']:
            self.seats_treeiter = self.devices_treestore.append(None, ['seat://', theme.load_icon('computer', 24, 0), 'Seats', None, False, None])
            self.rows['seat://'] = Gtk.TreeRowReference.new(self.devices_treestore, self.devices_treestore.get_path(self.seats_treeiter))

        for device in devices:
            self.add_new_device(device)

    def add_new_device(self, device):
        device_icon = theme.load_icon(device.icon, 24, 0)

        treeiter = self.devices_treestore.append(self.get_device_parent_treeiter(device),
            [device.path, device_icon, device.nice_label,
            device.subsystem, False, device.name])

        self.rows[device.path] = Gtk.TreeRowReference.new(self.devices_treestore,
            self.devices_treestore.get_path(treeiter))

        search_text = self.search_entry.get_text().lower()
        if search_text:
            treerow = self.devices_treestore[treeiter]

            if udevdiscover.device.match_string(device, search_text):
                treerow[VISIBLE_COL] = True
                iter_parent = self.devices_treestore.iter_parent(treeiter)
                if iter_parent:
                    self.set_branch_visible(iter_parent)
            else:
                treerow[VISIBLE_COL] = False

        return self.rows[device.path]

    ###
    # Other menu actions

    def preferences_action_activated_cb(self, widget):
        if self.subsys_dialog.run() == Gtk.ResponseType.ACCEPT:
            chosen_preset = self.subsys_dialog.get_current_preset()
            self.options['subsystem_preset'] = chosen_preset

            if chosen_preset == CUSTOM_SUBSYS_PRESET:
                self.options['custom_subsystem_preset'] = \
                    ' '.join(self.subsys_dialog.get_chosen_subsystems())

            self.reload_action_activate_cb()
        self.subsys_dialog.destroy()

    def showparents_toggleaction_toggled_cb(self, action):
        self.options['parent_tree'] = action.get_active()
        self.device_finder.scan_subsystems(
            self.subsys_dialog.get_chosen_subsystems(), 
            self.options['parent_tree'])

        self.populate(self.device_finder.get_devices())
        self.expand_toggleaction_toggled_cb(self.expand_toggleaction)

    def expand_toggleaction_toggled_cb(self, action):
        if action.get_active():
            self.devices_tv.expand_all()
        else:
            with self.preserve_cursor():
                self.devices_tv.collapse_all()

        self.options['expanded'] = self.expand_toggleaction.get_active()

    def follownew_toggleaction_toggled_cb(self, action):
        self.options['follownew'] = self.follownew_toggleaction.get_active()

    def followchanged_toggleaction_toggled_cb(self, action):
        self.options['followchanged'] = self.followchanged_toggleaction.get_active()

    def reload_action_activate_cb(self, widget=None):
        with self.preserve_cursor():
            # Flush and repopulate the tree
            self.device_finder.scan_subsystems(
                self.subsys_dialog.get_chosen_subsystems(),
                self.options['parent_tree'])

            self.populate(self.device_finder.get_devices())
            self.expand_toggleaction_toggled_cb(self.expand_toggleaction)

    def summary_menuitem_activate_cb(self, widget):
        self.builder.get_object('notebook1').set_current_page(0)

    def properties_menuitem_activate_cb(self, widget):
        self.builder.get_object('notebook1').set_current_page(1)

    ###

    # Device selected in tree
    def devices_tv_cursor_changed_cb(self, treeview):
        selection = self.devices_tv.get_selection()
        model, selected = selection.get_selected()

        if selected:
            row = model[selected]
            if self.device_finder.get_devices_tree().has_key(row[PATH_COL]):
                device = self.device_finder.get_devices_tree()[row[PATH_COL]]

                title = '<b>'+device.nice_label+'</b>'
                if hasattr(device, 'vendor_name') and device.vendor_name:
                    title += '\n<i>%s</i>' % device.vendor_name.decode('UTF-8')
                if hasattr(device, 'model_name') and device.model_name:
                    title += '\n<i>%s</i>' % device.model_name.decode('UTF-8')
                self.devicename_label.set_label(title)

                desc = '\n'.join([': '.join(('<b>'+key.capitalize()+'</b>', 
                    str(val))) for key, val in device.get_info()])
                self.devicedesc_label.set_label(desc)

                self.device_image.set_from_icon_name(device.icon, Gtk.IconSize.DIALOG)

                if hasattr(device, 'get_summary'):
                    self.summary_scrollwindow.set_visible(True)
                    desc = '\n'.join([': '.join(('<b>'+key.capitalize()+'</b>', 
                        str(val))) for key, val in device.get_summary()])
                    self.devicepropsum_label.set_label(desc)
                else:
                    self.summary_scrollwindow.set_visible(False)

                self.deviceprop_store.clear()
                for key, val in device.get_props().items():
                    self.deviceprop_store.append([key, 
                        val.decode("string-escape")])

                self.builder.get_object('device_menuitem').set_sensitive(True)
                self.current_device_path = device.get_props()['DEVPATH']
                # If it's a seat-attachable device, we enable seat submenu and update active seat entry
                self.current_device_seat = self.get_device_seat(device)
                if self.current_device_seat != None:
                    self.update_chosen_seat(self.current_device_seat)
                    self.builder.get_object('seat_menuitem').set_sensitive(True)
                # Otherwise, disable seat submenu
                else:
                    self.builder.get_object('seat_menuitem').set_sensitive(False)
            else:
                self.builder.get_object('device_menuitem').set_sensitive(False)

    def search_entry_activate_cb(self, entry):
        search_text = entry.get_text().lower()
        if not search_text:
            return

        visible_iter = []
        for path in self.rows.keys():
            iter = self.devices_treestore.get_iter(self.rows[path].get_path())
            treerow = self.devices_treestore[iter]
            device = self.device_finder.get_devices_tree()[treerow[PATH_COL]]

            if udevdiscover.device.match_string(device, search_text):
                treerow[VISIBLE_COL] = True
                visible_iter.append(iter)
            else:
                treerow[VISIBLE_COL] = False

        if visible_iter:
            for iter in visible_iter:
                iter_parent = self.devices_treestore.iter_parent(iter)
                if iter_parent:
                    self.set_branch_visible(iter_parent)

        self.showparents_toggleaction.set_sensitive(False)
        self.modelfilter = self.devices_treestore.filter_new(None)
        self.modelfilter.set_visible_column(VISIBLE_COL)

        self.devices_tv.set_model(self.modelfilter)
        self.expand_toggleaction_toggled_cb(self.expand_toggleaction)
        self.is_filtered = True

    def set_branch_visible(self, itr):
        """ Sets the whole tree-branch upward as visible """

        tr = self.devices_treestore[itr]
        tr[VISIBLE_COL] = True
        itr_prnt = self.devices_treestore.iter_parent(itr)
        if itr_prnt:
            self.set_branch_visible(itr_prnt)

    def search_entry_changed_cb(self, entry):
        if entry.get_text():
            entry.set_property('primary-icon-sensitive',True)
            entry.set_property('secondary-icon-sensitive',True)
        else:
            self.devices_tv.set_model(self.devices_treestore)
            self.expand_toggleaction_toggled_cb(self.expand_toggleaction)
            self.showparents_toggleaction.set_sensitive(True)
            entry.set_property('primary-icon-sensitive',False)
            entry.set_property('secondary-icon-sensitive',False)
            self.is_filtered = False

    def search_entry_icon_release_cb(self, entry, icon_pos, event):
        if icon_pos == 0:
            entry.set_text('')
            self.devices_tv.set_model(self.devices_treestore)
            self.expand_toggleaction_toggled_cb(self.expand_toggleaction)
        else:
            self.search_entry_activate_cb(entry)

    def about_action_activate_cb(self, widget):
        self.about_dialog.run()

    def help_action_activate_cb(self, widget):
        pass

    def quit_action_activate_cb(self, data=None):
        self.options['devices_hpaned'] = self.devices_hpaned.get_position()
        self.options['eventslog_vpaned'] = self.eventslog_vpaned.get_position()
        self.options['eventslog_expanded'] = self.eventslog_expander.get_expanded()
        self.options['follownew'] = self.follownew_toggleaction.get_active()
        self.options['followchanged'] = self.followchanged_toggleaction.get_active()
        self.saveconf()
        sys.exit(0)

